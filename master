# sum-of-rows-and-columns-of-matrix
24th program on c
#include<stdio.h>
int main()
{
int a[10][10];
int i,j,m,n,sum=0,sum1=0;
printf("Enter the size of the matrix \n");
scanf("%d %d",&m,&n);

for(i=0;i<m;i++)
{
  for(j=0;j<n;j++)
    {
      printf("The elements of the matrix are \n");
      scanf("%d",&a[i][j]);
     }
}
for(i=0;i<m;i++)
{
 for(j=0;j<n;j++)
 {
  sum=sum+a[i][j];
 }
printf("the sum of %d is = %d \n",i,sum);
sum=0;
}
for(j=0;j<n;j++)
{
 for(i=0;i<m;i++)
 {
  sum1=sum1+a[i][j];
 }
printf("the sum of %d is = %d \n",j,sum1);
sum1=0;
}
return(0);
}
